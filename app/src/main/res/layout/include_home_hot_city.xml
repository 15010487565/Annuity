<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门城市"
        android:textStyle="bold"
        android:layout_marginTop="80px"
        android:textColor="@color/black_26"
        android:textSize="18sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_HomeHotCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        app:layout_collapseMode="pin"
        app:tabIndicatorColor="@color/orange"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/black_5B"
        app:tabTextColor="@color/black_5B" />

    <com.denong.doluck.view.WrapContentHeightViewPager
        android:id="@+id/vp_TabHomeHotCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62px"
        android:textSize="@dimen/textsize_13"
        android:paddingTop="25px"
        android:paddingBottom="25px"
        android:gravity="center"
        android:textColor="@color/orange"
        android:background="@color/black_e8"
        android:text="查看更多 >" />
</merge>