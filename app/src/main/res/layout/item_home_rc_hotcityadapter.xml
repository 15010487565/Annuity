<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_HomeRcHotCityHead"
        android:layout_width="270px"
        android:layout_height="202px"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_HomeRcHotCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_26"
        android:textSize="@dimen/textsize_15"
        android:textStyle="bold"
        android:layout_marginTop="25px"
        android:text="小镇"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20px"
            android:layout_height="23px"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/address"/>
        <TextView
            android:id="@+id/tv_HomeRcHotCityAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_99"
            android:textSize="@dimen/textsize_11"
            android:layout_marginLeft="14px"
            android:text="**"/>
        <View
            android:layout_width="1px"
            android:layout_height="20px"
            android:background="#d8d8d8"
            android:layout_marginLeft="14px"
            android:layout_marginRight="14px"/>
        <TextView
            android:id="@+id/tv_HomeRcHotCityDstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_99"
            android:textSize="@dimen/textsize_11"
            android:text="0.0km"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="19px"
            android:layout_height="18px"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/buy"/>
        <TextView
            android:id="@+id/tv_HomeRcHotCitySpecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_99"
            android:textSize="@dimen/textsize_11"
            android:layout_marginLeft="14px"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="********************************************"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_99"
            android:textSize="@dimen/textsize_10"
            android:layout_marginRight="30px"
            android:maxLines="1"
            android:background="@drawable/shape_black_e8"
            android:paddingTop="6px"
            android:paddingBottom="6px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="人均元"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/shape_home_hotcity"
            android:paddingTop="6px"
            android:paddingBottom="6px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="********************************************"/>

    </LinearLayout>
</LinearLayout>
