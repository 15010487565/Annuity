<resources>

    <!-- Base com.xqxb.www.annuity.application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top_bar_background</item>
        <item name="colorPrimaryDark">@color/top_bar_background</item>
        <item name="colorAccent">@color/top_bar_background</item>
       <!--沉浸状态栏-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top_bar_background</item>
        <item name="colorPrimaryDark">@color/top_bar_background</item>
        <item name="colorAccent">@color/top_bar_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/ic_launcher_round</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/textsize_13</item>
    </style>
</resources>
